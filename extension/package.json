{
  "name": "aide-vscode",
  "displayName": "AIde - AI Coding Assistant",
  "description": "AI-powered coding assistant with chat, code auditing, and project analytics",
  "version": "0.3.0",
  "publisher": "aide-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/aide-dev/aide-vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "code review",
    "chatgpt",
    "claude"
  ],
  "activationEvents": [
    "onView:aide.chatView",
    "onCommand:aide.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aide-sidebar",
          "title": "AIde",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "aide-sidebar": [
        {
          "type": "webview",
          "id": "aide.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "aide.start",
        "title": "Start AIde"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "vite build",
    "watch-webview": "vite build --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "prettier": "^2.8.8",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}