# AIde Environment Configuration
# Copy this file to .env and fill in your values
# NOTE: Never commit .env to version control (it's in .gitignore)

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite (default - suitable for local development)
DATABASE_URL=sqlite:///./aide.db

# For PostgreSQL (uncomment to use):
# DATABASE_URL=postgresql://user:password@localhost:5432/aide

# ============================================
# CHROMA DB (Vector Database)
# ============================================
# Use local ChromaDB (default)
CHROMA_SERVER_HOST=local

# Use remote ChromaDB server:
# CHROMA_SERVER_HOST=chroma.example.com
# CHROMA_SERVER_PORT=8000

# ============================================
# REDIS CACHE (Optional - for caching)
# ============================================
# Enable Redis caching (optional, improves performance)
REDIS_URL=redis://localhost:6379/0

# Disable Redis if not available
# REDIS_URL=

# ============================================
# LLM API KEYS (Set these in VS Code Settings UI)
# ============================================
# These can also be set in the VS Code Settings tab instead
# If set here, they will override settings from the UI

# OpenAI API Key (for GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# Groq API Key (for fast inference)
GROQ_API_KEY=

# Hugging Face API Key (for open models)
HUGGINGFACE_API_KEY=

# GitHub Token (for GitHub Copilot integration)
GITHUB_API_TOKEN=

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment: development, staging, production
APP_ENV=development

# Secret key for session encryption (change this in production)
SECRET_KEY=your-super-secret-key-change-in-production

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# OPTIONAL: TELEMETRY & ERROR REPORTING
# ============================================
# Opt-in to telemetry (help improve AIde)
TELEMETRY_ENABLED=false

# Opt-in to error reporting
ERROR_REPORTING_ENABLED=false

# ============================================
# OPTIONAL: DEVELOPMENT SETTINGS
# ============================================
# Enable auto-reload on code changes
RELOAD=true

# Enable verbose logging
VERBOSE=false

# ============================================
# FEATURE FLAGS
# ============================================
# Enable background ingestion (asynchronous document processing)
ENABLE_BACKGROUND_INGESTION=true

# Enable audit task background processing
ENABLE_AUDIT_BACKGROUND=true

# Maximum file size for ingestion (MB)
MAX_FILE_SIZE_MB=10

# ============================================
# DEPRECATED (v0.1.0) - DO NOT USE
# ============================================
# These are kept for reference only
# OLD_MAIN_VERSION=0.1.0  # Use main_enhanced.py instead
